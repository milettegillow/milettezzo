---
import BaseLayout from "../layouts/BaseLayout.astro";
import PolaroidCarousel from "../components/PolaroidCarousel.astro";
import { contactContent } from "../content/contact.ts";

const { pageTitle, subtitle, intro, socialLinks, polaroidImages } = contactContent;
---

<BaseLayout title="Contact | Milette Gillow">
  <div class="stage-door-page">
    <header class="page-header">
      <h1>{pageTitle}</h1>
      <p class="page-subtitle">{subtitle}</p>
    </header>

    <div class="intro-section">
      {Array.isArray(intro) ? (
        intro.map((paragraph) => paragraph && <p>{paragraph}</p>)
      ) : (
        <p>{intro}</p>
      )}
    </div>

    <div class="contact-layout">
      <!-- Contact Form -->
      <div class="form-section">
        <form class="contact-form" id="contact-form" method="post" action="/api/contact">
          <div id="form-message" class="form-message" role="alert" aria-live="polite"></div>
          
          <div class="form-group">
            <label for="name">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="What should I call you?"
              required
              aria-required="true"
            />
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="your.email@example.com"
              required
              aria-required="true"
            />
          </div>

          <div class="form-group">
            <label for="message">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="6"
              placeholder="Tell me about your idea, project, or just say hi..."
              required
              aria-required="true"
            ></textarea>
          </div>

          <!-- Honeypot field - hidden from users -->
          <div class="form-group" style="display: none;" aria-hidden="true">
            <label for="website">Website</label>
            <input 
              type="text" 
              id="website" 
              name="website" 
              tabindex="-1"
              autocomplete="off"
            />
          </div>

          <button type="submit" class="submit-btn" id="submit-btn">
            <span class="btn-text">Send</span>
            <span class="btn-loading" style="display: none;">Sending...</span>
          </button>
        </form>
      </div>

      <!-- Social Links -->
      <div class="social-section">
        <h2>Find me elsewhere</h2>
        <ul class="social-links">
          {socialLinks.map((social) => (
            <li>
              <a 
                href={social.url} 
                target="_blank" 
                rel="noopener noreferrer"
                aria-label={`${social.platform} ${social.handle} - Opens in new tab`}
              >
                {social.icon === 'instagram' && (
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="2" width="16" height="16" rx="4"/>
                    <circle cx="10" cy="10" r="3"/>
                    <circle cx="15" cy="5" r="1"/>
                  </svg>
                )}
                {social.icon === 'youtube' && (
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M8 6v8l6-4-6-4z"/>
                    <circle cx="10" cy="10" r="8"/>
                  </svg>
                )}
                <span>{social.handle}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Polaroid Carousel -->
    <div class="bts-section">
      <PolaroidCarousel images={polaroidImages} />
    </div>
  </div>
</BaseLayout>

<style>
  .stage-door-page {
    max-width: var(--max-width-wide);
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* Page Header */
  .page-header {
    margin-bottom: var(--spacing-xl);
  }

  .page-header h1 {
    margin-bottom: var(--spacing-xs);
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: var(--color-charcoal);
    font-style: italic;
    margin: 0;
    max-width: none;
  }

  /* Intro Section */
  .intro-section {
    margin-bottom: var(--spacing-2xl);
  }

  .intro-section p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-black);
    max-width: none;
  }

  /* Contact Layout */
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
    align-items: start;
  }

  /* Form Section */
  .form-section {
    min-width: 0;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-black);
    font-family: var(--font-sans);
  }

  .form-group input,
  .form-group textarea {
    font-family: var(--font-serif);
    font-size: 1rem;
    padding: var(--spacing-sm);
    border: 1px solid rgba(26, 26, 26, 0.2);
    border-radius: 4px;
    background-color: var(--color-ivory);
    color: var(--color-black);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    resize: vertical;
  }

  @media (prefers-reduced-motion: reduce) {
    .form-group input,
    .form-group textarea {
      transition: none;
    }
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: var(--color-charcoal);
    opacity: 0.6;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px rgba(139, 111, 71, 0.1);
  }

  .form-group textarea {
    min-height: 150px;
    line-height: 1.6;
  }

  .submit-btn {
    align-self: flex-start;
    padding: 0.625rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    font-family: var(--font-sans);
    color: #ffffff;
    background-color: rgba(109, 109, 110, 0.7);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
    white-space: nowrap;
    backdrop-filter: blur(10px);
  }

  @media (prefers-reduced-motion: reduce) {
    .submit-btn {
      transition: none;
    }
  }

  .submit-btn:hover {
    background-color: rgba(109, 109, 110, 0.4);
    transform: scale(1.05);
  }

  @media (prefers-reduced-motion: reduce) {
    .submit-btn:hover {
      transform: none;
    }
  }

  .submit-btn:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  /* Social Section */
  .social-section h2 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
    font-weight: 400;
  }

  .social-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .social-links a {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    color: var(--color-black);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
    padding: var(--spacing-xs) 0;
  }

  @media (prefers-reduced-motion: reduce) {
    .social-links a {
      transition: none;
    }
  }

  .social-links a:hover {
    color: var(--color-accent);
  }

  .social-links a svg {
    flex-shrink: 0;
  }

  /* BTS Section */
  .bts-section {
    margin-top: var(--spacing-2xl);
    position: relative;
    z-index: 1;
  }

  .bts-section h2 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-lg);
    font-weight: 400;
    font-style: italic;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .social-section {
      order: -1;
    }
  }

  @media (max-width: 768px) {
    .intro-section p {
      font-size: 1rem;
    }

    .page-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .submit-btn {
      width: 100%;
      padding: var(--spacing-sm) var(--spacing-lg);
    }

    .form-group input,
    .form-group textarea {
      font-size: 0.9375rem;
    }
  }

  /* Form Message Styles */
  .form-message {
    padding: var(--spacing-md);
    border-radius: 4px;
    margin-bottom: var(--spacing-lg);
    display: none;
    font-family: var(--font-sans);
    font-size: 0.9375rem;
  }

  .form-message.show {
    display: block;
  }

  .form-message.success {
    background-color: rgba(76, 175, 80, 0.1);
    color: #2e7d32;
    border: 1px solid rgba(76, 175, 80, 0.3);
  }

  .form-message.error {
    background-color: rgba(244, 67, 54, 0.1);
    color: #c62828;
    border: 1px solid rgba(244, 67, 54, 0.3);
  }

  .submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const messageDiv = document.getElementById('form-message');

    if (!form || !messageDiv) return;

    const showMessage = (text, type) => {
      messageDiv.textContent = text;
      messageDiv.className = 'form-message show ' + type;
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    };

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      try {
        const formData = new FormData(form);
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok && data.success) {
          showMessage('Thank you! Your message has been sent. I\'ll get back to you soon.', 'success');
          form.reset();
        } else {
          showMessage(data.error || 'Something went wrong. Please try again.', 'error');
        }
      } catch (error) {
        console.error('Form submission error:', error);
        showMessage('Network error. Please check your connection and try again.', 'error');
      }
    });
  });
</script>

